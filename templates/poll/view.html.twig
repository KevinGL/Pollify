{% extends 'base.html.twig' %}

{% block title %}Statistiques - {{ poll.title }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 px-4 py-8 flex items-center justify-center">

    <div class="bg-white shadow-xl rounded-2xl p-12 w-full max-w-4xl">
        <h1 class="text-3xl font-bold text-gray-800 mb-4 text-center">{{ poll.title }}</h1>

        {% set userVote = null %}
        {% for vote in poll.votes %}
            {% if vote.user.username == app.user.username %}
                {% set userVote = vote %}
            {% endif %}
        {% endfor %}

        <div class="mb-4">
            {% if poll.beginAt | date("U") <= "now" | date("U") and poll.endAt | date("U") >= "now" | date("U") and userVote == null %}
                <div class="text-gray-800 font-medium mb-2">Votez pour :</div>
                <ul class="list-disc list-inside space-y-1">
                    {% for choice in poll.choices %}
                        <li class="flex justify-between items-center">
                            <span>- {{ choice.title }}</span>
                            <a href="{{ url('vote', {'pollID': poll.id, 'choiceID': choice.id}) }}"
                                class="text-indigo-700 hover:underline text-sm font-medium flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Voter
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% elseif poll.beginAt | date("U") <= "now" | date("U") and poll.endAt | date("U") >= "now" | date("U") and userVote != null %}
                <div class="text-green-600 font-semibold flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Vous avez voté pour : {{ userVote.choice.title }}
                </div>
            {% else %}
                <div class="text-gray-400 font-medium">Sondage terminé</div>
            {% endif %}
        </div>

        <p class="text-gray-600 mb-6 text-center">
            Statistiques des votes pour ce sondage
        </p>

        <div class="flex justify-center mb-6">
            <div class="w-full" style="max-width:1000px; height:600px;">
                <canvas id="chart" style="width:100%; height:400px;"></canvas>
            </div>
        </div>

        <div class="mt-8 text-center">
            <a href="{{ url('app_poll') }}" class="text-blue-600 hover:underline">
                ← Revenir à la liste des sondages
            </a>
        </div>
    </div>
</div>

<script>
    const xValues =
    [
        {% for vote in votes %}
            "{{ vote.choice_title }}",
        {% endfor %}
    ];

    const yValues =
    [
        {% for vote in votes %}
            {{ vote.votes_count }},
        {% endfor %}
    ];

    const barColors =
    [
        {% for color in colors %}
            "{{ color }}",
        {% endfor %}
    ];

    const ctx = document.getElementById("chart").getContext("2d");
    const myChart = new Chart(ctx,
    {
        type: "pie",
        data:
        {
            labels: xValues,
            datasets:
            [{
                backgroundColor: barColors,
                data: yValues
            }]
        },
        options:
        {
            responsive: true,
            maintainAspectRatio: false,
            plugins:
            {
                legend: { display: false },
                tooltip: { enabled: true }
            }
        }
    });
</script>

{% endblock %}