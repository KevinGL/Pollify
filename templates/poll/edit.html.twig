{% extends 'base.html.twig' %}

{% block title %}Modifier un sondage{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 px-4 py-8 flex items-center justify-center">

    <div class="bg-white shadow-xl rounded-2xl p-6 md:p-8 w-full max-w-4xl flex flex-col md:flex-row items-center gap-6">

        <div class="md:w-1/2 flex justify-center">
            <img src="/images/undraw_report_k55w.svg" alt="Créer sondage" class="w-3/4 h-auto">
        </div>

        <div class="md:w-1/2 w-full">
            <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center md:text-left">Modifier un sondage</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

                <div>
                    {{ form_label(form.title, 'Titre du sondage', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-2'}}) }}
                    {{ form_errors(form.title) }}
                </div>

                <div>
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-2'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        {{ form_label(form.beginAt, 'Date de début', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.beginAt, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-2'}}) }}
                        {{ form_errors(form.beginAt) }}
                    </div>

                    <div>
                        {{ form_label(form.endAt, 'Date de fin', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.endAt, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-2'}}) }}
                        {{ form_errors(form.endAt) }}
                    </div>
                </div>

                {% if is_granted('ROLE_ADMIN') %}
                    <div>
                        {{ form_row(form.user) }}
                    </div>
                {% endif %}

                <div>
                    {{ form_label(form.choices, 'Choix possibles (une ligne = un choix)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.choices, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-2 h-32'}}) }}
                    {{ form_errors(form.choices) }}
                </div>

            {{ form_end(form) }}
        </div>

    </div>
</div>
{% endblock %}
